<p id="notice"><%= notice %></p>

<h1>Movie Reviews</h1>

<div>
    <button><%= link_to 'Create new review', new_article_path %></button>
</div>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.movie %></td>
                <td><%= article.review %></td>
                <td><%= link_to 'Show', article %></td>
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
                <td><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure you want to delete this review?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
