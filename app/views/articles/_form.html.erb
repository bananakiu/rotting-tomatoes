<%= form_with(model: article) do |form| %>
    <%# error display %>
    <% if article.errors.any? %>
        <div class="text-red-700 mb-6">
            <h2>Error/s occurred. Try again.</h2>
            <ul class="list-disc list-inside">
                <% article.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%# form proper %>
    <div class="flex flex-col mb-4">
        <%= form.label :movie, class: "text-xl font-semibold" %>
        <%= form.text_field :movie, class: "
        w-full text-base
        px-4 py-2
        border border-gray-300 rounded-md
        focus:outline-none focus:border-gray-500
        " %>
    </div>
    <div class="flex flex-col mb-4">
        <%= form.label :review, class: "text-xl font-semibold" %>
        <%= form.text_area :review, rows: 8, class: "
        w-full text-base
        px-4 py-2
        border border-gray-300 rounded-md
        focus:outline-none focus:border-gray-500
        " %>
    </div>
    <%= form.submit "Add review", class: "
    flex items-center justify-center
    bg-red-700 hover:bg-red-800 text-white
    py-2 px-6 w-full sm:w-36
    text-lg
    rounded-md
    cursor-pointer
    " %>
<% end %>