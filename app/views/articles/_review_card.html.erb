<div class="
rounded-lg border-2
px-4 py-4
w-72 shadow-md
bg-white
">
    <h1 class="text-xl font-semibold">
        <%= review.movie %>
    </h1>
    <p>
        <%= review.review %>
    </p>
    <div class="
    flex flex-row justify-center items-stretch
    text-center
    mt-6
    bg-red-500 text-white rounded-lg

    ">
        <div class="
        w-full px-4
        hover:bg-red-700
        cursor-pointer
        rounded-l-lg
        ">
            <%= link_to 'Show', review %>
        </div>
        <div class="
        w-full px-4
        hover:bg-red-700
        cursor-pointer
        ">
            <%= link_to 'Edit', edit_article_path(review) %>
        </div>
        <div class="
        w-full px-4
        hover:bg-red-700
        cursor-pointer
        rounded-r-lg
        ">
            <%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure you want to delete this review?' } %>
        </div>
    </div>
    
</div>
