<div class="
flex flex-col items-center
w-full
">
    <div class="w-1/2">
        <p class="
        mb-4 <%= notice.include?("destroy") ? "text-red-700" : "text-green-700" if notice != nil%>
        ">
            <%= notice %>
        </p>
        
        <%= link_to 'Back to list', articles_path, class: "
        flex items-center justify-center
        bg-gray-500 hover:bg-gray-700 text-white
        py-2 px-6 w-36
        text-lg
        rounded-md
        cursor-pointer
        mb-4
        " %>

        <div class="
        rounded-lg border-2
        px-4 py-4
        shadow-md
        bg-white
        ">
            <h1 class="text-3xl font-bold mb-4">
                <%= @article.movie %>
            </h1>
            <p>
                <%= @article.review %>
            </p>
            <div class="flex mt-8">
                <%= link_to 'Edit', edit_article_path(@article), class: "
                flex items-center justify-center
                bg-red-700 hover:bg-red-800 text-white
                py-2 px-6 w-full sm:w-36
                text-lg
                rounded-md
                cursor-pointer
                mr-4
                " %>
                <%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure you want to delete this review?' }, class: "
                flex items-center justify-center
                bg-red-700 hover:bg-red-800 text-white
                py-2 px-6 w-full sm:w-36
                text-lg
                rounded-md
                cursor-pointer
                " %>
            </div>
        </div>
    </div>
</div>